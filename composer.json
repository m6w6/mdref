{
    "name": "m6w6/mdref",
    "description": "Quick Markdown Reference Browser",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Michael Wallner",
            "email": "mike@php.net"
        }
    ],
    "bin": [
        "bin/ref2stub",
        "bin/ref2html"
    ],
    "autoload": {
        "psr-4": {
            "mdref\\": "mdref/"
        }
    },
